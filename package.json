{
  "name": "interactive-comments-section",
  "private": true,
  "version": "0.0.0",
  "homepage": "https://bohdancho.github.io/interactive-comments-section/",
  "type": "module",
  "scripts": {
    "dev": "concurrently npm:dev:*",
    "dev:frontend": "vite",
    "dev:backend": "nodemon src/api/index.ts",
    "prebuild": "rimraf dist",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "tsc && vite build",
    "build:backend": "babel src/api/index.ts --out-dir ./dist --extensions .ts",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "start": "NODE_ENV=production PORT=1400 node dist/index.js",
    "preview": "concurrently npm:preview:frontend npm:start",
    "preview:frontend": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.11",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.2",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^8.2.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import-alias": "^1.2.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "express": "^4.18.2",
    "gh-pages": "^5.0.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.21",
    "prettier": "^3.0.2",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "react-inlinesvg": "^3.0.1",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.0.0",
    "vite-plugin-eslint": "^1.8.1"
  }
}
