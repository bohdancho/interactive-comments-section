// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  comments  Comment[]
  userVotes UserVote[]
}

model Comment {
  id            Int        @id @default(autoincrement())
  createdAt     DateTime   @default(now())
  body          String
  author        User       @relation(fields: [authorId], references: [id])
  authorId      Int
  rating        Int        @default(0)
  userVotes     UserVote[]
  replies       Comment[]  @relation("RootCommentReplies")
  rootComment   Comment?   @relation("RootCommentReplies", fields: [rootCommentId], references: [id], onDelete: Cascade)
  rootCommentId Int?

  @@index([authorId])
  @@index([rootCommentId])
}

model UserVote {
  choice    Vote
  comment   Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  commentId Int
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int

  @@id([commentId, userId])
  @@index([commentId])
  @@index([userId])
}

enum Vote {
  Upvote
  Downvote
}
